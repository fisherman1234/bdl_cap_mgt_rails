<!DOCTYPE html>
<html>
<head>
  <title>BDL Capital Management</title>
  <%= stylesheet_link_tag :all, :media=>:all %>
  <%= javascript_include_tag  "jquery", "jquery-ui", "jquery.menu","jquery.dataTables","jquery.hotkeys", "jquery.form", "nested_form", "jquery.blockUI", "jquery.ui.datepicker-fr", "application"%>
  <script language="javascript" type="text/javascript" src="/javascripts/editor/editor.js"></script>
  
  <script language="javascript" type="text/javascript" src="/javascripts/tiny_mce/tiny_mce.js"></script>
  <script language="javascript" type="text/javascript">

  	tinyMCE.init({

  		mode : "textareas",
  		readonly : true,
  		theme : "advanced",
  		relative_urls : false,
  		remove_script_host : false,
  		setup : function(ed) {
            ed.onPostRender.add(function(ed, cm) {
                console.debug('After render: ' + ed.id);
                $(".mceLayout").width('100%');
                $(".mceLayout").height('100');
            });}
  		
  		});

  </script>
  <%= csrf_meta_tag %>


  
</head>
<body>




<div id="header">
  <% if @title%>
    <h1><%=@title%></h1>
  <%end%>
</div>

<div id="page-content-container">
  <%= yield %>
</div>
<%= javascript_include_tag "layout"%>

</body>
</html>
